<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    android:fontFamily="@font/montserrat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/main_toolbar"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ABOUT THIS APP"
            android:layout_margin="20dp"
            android:fontFamily="@font/montserrat"
            android:textSize="30sp"
            android:textColor="@color/design_default_color_primary_dark"
            android:layout_gravity="center"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="This quiz app has 3 categories with 3 difficult levels"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Categories are:                                                       1.PROGRAMMING
                                         2.GEOGRAPHY
                                         3.MATH"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="RULES AND FUNCTIONALITY: "
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView01"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="1.TIMER runs for 27 secs"

            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView02"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="2.Timer color changes"

            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/textView03"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="3.Correct Answer becomes  green and remaining red"

            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView04"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="4.As of now each category has 1 question each"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:fontFamily="@font/montserrat"
            android:text="Thank you ! you can take quiz from navigational drawer"
            android:layout_marginBottom="10dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:textSize="20sp" />



    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <include layout="@layout/main_nav_drawer"/>
    </RelativeLayout>


</androidx.drawerlayout.widget.DrawerLayout>